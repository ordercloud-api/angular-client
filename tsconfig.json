{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "sdk": [
        "dist/sdk/sdk",
        "dist/sdk"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "name": "@ordercloud/angular-sdk",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "theme": "projects/sdk/docs-templates"
  }
}